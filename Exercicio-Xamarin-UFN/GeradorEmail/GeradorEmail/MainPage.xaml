<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeradorEmail.MainPage">

    <StackLayout>
        <Frame BackgroundColor="LightGreen" Padding="24" CornerRadius="0">
            <Label Text="Gerador de E-mail" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Nome completo:" FontSize="20" Padding="0, 15"/>
        <Entry x:Name="etNome" Keyboard="Text"  Placeholder="Informe o nome completo" />
        <Button Text="Gerar E-mail" Clicked="BtnGerarEmail_Clicked"/>
        <Label x:Name="lblEmail" FontSize="18" Padding="20, 0"/>
    </StackLayout>

</ContentPage>
