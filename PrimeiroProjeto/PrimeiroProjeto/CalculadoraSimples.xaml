<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimeiroProjeto.CalculadoraSimples">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Calculadora simples" />
            <Label Text="Valor A:" />
            <Entry x:Name="etValorA" Keyboard="Numeric" Placeholder="Informe um número" />
            <Label Text="Valor B:" />
            <Entry x:Name="etValorB" Keyboard="Numeric" Placeholder="Informe um número" />
            <StackLayout Orientation="Horizontal">
                <Button Text="+" Clicked="BtnExecutar_Clicked"/>
                <Button Text="-" Clicked="BtnExecutar_Clicked"/>
                <Button Text="/" Clicked="BtnExecutar_Clicked"/>
                <Button Text="*" Clicked="BtnExecutar_Clicked"/>
            </StackLayout>
            <Label x:Name="lblResposta" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>